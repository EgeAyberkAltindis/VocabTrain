@model List<BLL.DTO.QuizRunSummaryDto>
@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning mb-0">Bu gün için kayıt bulunamadı.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr><th>Saat</th><th>Liste</th><th>Mod</th><th>Tohum</th><th>Gösterim</th><th>Doğru</th><th>Yanlış</th><th></th></tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.StartedAt.ToString("HH:mm")</td>
                        <td>@r.ListName</td>
                        <td>@r.Mode</td>
                        <td>@r.SeedCount</td>
                        <td>@r.TotalShown</td>
                        <td class="text-success">@r.Correct</td>
                        <td class="text-danger">@r.Wrong</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Run" asp-route-id="@r.QuizRunId">Detay</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


